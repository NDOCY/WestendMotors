@model IEnumerable<WestendMotors.Models.UserVehicle>

@{
    ViewBag.Title = "Vehicle Assignments";
    var role = Session["Role"] as string;

    if (role == "Admin")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout_User.cshtml";
    }
}

<h2>Vehicle Assignments</h2>

<p>
    @Html.ActionLink("Create New Assignment", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Assign Vehicle to User", "Assign", null, new { @class = "btn btn-success" })
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Vehicle</th>
            <th>Purchase Date</th>
            <th>Service Recurrence</th>
            <th>Next Service</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.User.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Vehicle.Title)</td>
                <td>@item.PurchaseDate.ToString("d")</td>
                <td>
                    @if (item.ServiceSchedules != null && item.ServiceSchedules.Any())
                    {
                        @item.ServiceSchedules.First().RecurrenceType
                    }
                    else
                    {
                        <span class="text-muted">Not scheduled</span>
                    }
                </td>
                <td>
                    @if (item.ServiceSchedules != null && item.ServiceSchedules.Any())
                    {
                        @item.ServiceSchedules.First().NextServiceDate.ToString("d")
                    }
                    else
                    {
                        <span class="text-muted">N/A</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No vehicle assignments found.
    </div>
}