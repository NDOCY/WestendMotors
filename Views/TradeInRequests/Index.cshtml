        }

        .btn-success {
            background: var(--success-color);
            color: white;
        }

            .btn-success:hover {
                background: #219a52;
                transform: translateY(-2px);
                box-shadow: var(--shadow-hover);
                color: white;
                text-decoration: none;
            }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-muted);
        }

        .empty-icon {
            background: #f8f9fa;
