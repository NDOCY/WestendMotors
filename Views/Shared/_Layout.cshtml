<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Westend Motors</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        /* Matching Dashboard Theme - Clean Automotive Design */
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #3498db;
            --success-color: #27ae60;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
            --light-bg: #f8f9fa;
            --card-bg: #ffffff;
            --text-dark: #2c3e50;
            --text-muted: #7f8c8d;
            --border-color: #e1e8ed;
            --shadow: 0 2px 10px rgba(0,0,0,0.08);
            --shadow-hover: 0 4px 20px rgba(0,0,0,0.12);
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--light-bg);
            color: var(--text-dark);
            line-height: 1.6;
            padding-top: 80px;
        }

        /* Page Loader */
        .page-loader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 10000;
            transition: opacity 0.5s ease, visibility 0.5s ease;
        }

        .page-loader.hidden {
            opacity: 0;
            visibility: hidden;
        }

        .loader-spinner {
            width: 50px;
            height: 50px;
            border: 4px solid rgba(255,255,255,0.2);
            border-top: 4px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Navigation Bar */
        .navbar {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)) !important;
            box-shadow: var(--shadow);
            border: none;
            padding: 0.75rem 0;
            transition: all 0.3s ease;
        }

        .navbar.scrolled {
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
            backdrop-filter: blur(10px);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            color: white !important;
            text-decoration: none;
            letter-spacing: 0.5px;
            transition: all 0.2s ease;
        }

        .navbar-brand:hover {
            color: #ecf0f1 !important;
            text-decoration: none;
            transform: translateY(-1px);
        }

        .navbar-nav .nav-link {
            color: rgba(255,255,255,0.9) !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.2s ease;
            margin: 0 0.25rem;
            display: flex;
            align-items: center;
            position: relative;
        }

        .navbar-nav .nav-link:hover {
            color: white !important;
            background: rgba(255,255,255,0.1);
            text-decoration: none;
            transform: translateY(-1px);
        }

        .navbar-nav .nav-link.active {
            background: rgba(255,255,255,0.15);
            color: white !important;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .navbar-nav .nav-link i {
            font-size: 0.9rem;
            width: 16px;
            text-align: center;
        }

        /* User Avatar and Dropdown */
        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--accent-color), #2980b9);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            font-size: 0.9rem;
            margin-right: 0.75rem;
            border: 2px solid rgba(255,255,255,0.2);
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transition: all 0.2s ease;
        }

        .dropdown-toggle {
            display: flex;
            align-items: center;
            color: white !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 8px;
            transition: all 0.2s ease;
            text-decoration: none;
        }

        .dropdown-toggle:hover {
            background: rgba(255,255,255,0.1);
            color: white !important;
            text-decoration: none;
            transform: translateY(-1px);
        }

        .dropdown-toggle:hover .user-avatar {
            transform: scale(1.05);
        }

        .dropdown-toggle::after {
            margin-left: 0.75rem;
            border-top-color: rgba(255,255,255,0.8);
        }

        /* Dropdown Menu */
        .dropdown-menu {
            border: none;
            box-shadow: var(--shadow-hover);
            border-radius: 12px;
            padding: 0.5rem 0;
            background: var(--card-bg);
            margin-top: 0.5rem;
            min-width: 180px;
            animation: dropdownFadeIn 0.2s ease;
        }

        @@keyframes dropdownFadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .dropdown-item {
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            color: var(--text-dark);
            transition: all 0.2s ease;
            border: none;
            display: flex;
            align-items: center;
            font-size: 0.9rem;
        }

        .dropdown-item:hover {
            background: var(--light-bg);
            color: var(--accent-color);
            text-decoration: none;
            padding-left: 1.75rem;
        }

        .dropdown-item:focus {
            background: var(--light-bg);
            color: var(--accent-color);
            outline: none;
        }

        .dropdown-divider {
            margin: 0.5rem 0;
            border-color: var(--border-color);
        }

        /* Navbar Toggle for Mobile */
        .navbar-toggler {
            border: 2px solid rgba(255,255,255,0.3);
            border-radius: 8px;
            padding: 0.5rem 0.75rem;
            transition: all 0.2s ease;
        }

        .navbar-toggler:hover {
            background: rgba(255,255,255,0.1);
        }

        .navbar-toggler:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(255,255,255,0.2);
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.9%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        /* Container Styling */
        .container.body-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
            min-height: calc(100vh - 160px);
        }

        /* Footer Styling */
        footer {
            margin-top: 3rem;
            padding: 2rem 0;
            background: var(--card-bg);
            border-top: 1px solid var(--border-color);
            text-align: center;
            border-radius: 12px 12px 0 0;
            box-shadow: var(--shadow);
        }

        footer p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
            font-weight: 500;
        }

        /* Loading States */
        .btn-loading {
            pointer-events: none;
            opacity: 0.7;
        }

        .btn-loading::after {
            content: '';
            width: 16px;
            height: 16px;
            margin-left: 0.5rem;
            border: 2px solid transparent;
            border-top-color: currentColor;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        body.loading {
            cursor: progress;
        }

        body.page-transitioning {
            opacity: 0.8;
            pointer-events: none;
            transition: opacity 0.2s ease;
        }

        /* Enhanced Mobile Navigation */
        .navbar-collapse {
            background: rgba(0,0,0,0.05);
            border-radius: 8px;
            margin-top: 0.5rem;
            backdrop-filter: blur(10px);
            padding: 0.5rem 0;
        }

        @@media (min-width: 992px) {
            .navbar-collapse {
                background: none;
                margin-top: 0;
                backdrop-filter: none;
                padding: 0;
            }
        }

        /* Responsive Design */
        @@media (max-width: 991px) {
            body {
                padding-top: 70px;
            }

            .navbar {
                padding: 0.5rem 0;
            }

            .navbar-brand {
                font-size: 1.2rem;
            }

            .navbar-nav .nav-link {
                padding: 0.75rem 1rem !important;
                margin: 0.25rem 0;
                border-radius: 6px;
            }

            .dropdown-toggle {
                justify-content: center;
                padding: 0.75rem 1rem !important;
            }

            .container.body-content {
                padding: 0 0.75rem;
            }

            footer {
                margin-top: 2rem;
                padding: 1.5rem 0;
            }
        }

        @@media (max-width: 576px) {
            .navbar-brand {
                font-size: 1.1rem;
            }

            .dropdown-toggle span {
                display: none;
            }

            .user-avatar {
                margin-right: 0;
                width: 32px;
                height: 32px;
            }

            .dropdown-menu {
                min-width: 160px;
            }

            .navbar-nav .nav-link {
                font-size: 0.9rem;
            }
        }

        /* Focus Styles for Accessibility */
        .navbar-nav .nav-link:focus,
        .dropdown-toggle:focus,
        .dropdown-item:focus {
            outline: none;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.25);
        }

        /* Smooth scrolling */
        html {
            scroll-behavior: smooth;
        }

        /* Content spacing */
        .body-content > * {
            margin-bottom: 1rem;
        }

        .body-content > *:last-child {
            margin-bottom: 0;
        }

        /* Alert auto-hide animation */
        .alert {
            transition: all 0.3s ease;
        }

        .alert.fade-out {
            opacity: 0;
            transform: translateY(-10px);
        }

        /* Performance optimizations */
        .navbar-nav .nav-link,
        .dropdown-toggle,
        .dropdown-item {
            will-change: transform;
        }

        /* Print styles */
        @@media print {
            .navbar,
            footer {
                display: none !important;
            }

            body {
                padding-top: 0 !important;
            }

            .container.body-content {
                margin: 0 !important;
                padding: 0 !important;
                max-width: none !important;
            }
        }

        /* High contrast mode support */
        @@media (prefers-contrast: high) {
            .navbar {
                border-bottom: 2px solid white;
            }

            .navbar-nav .nav-link {
                border: 1px solid transparent;
            }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                border-color: white;
            }
        }

        /* Reduced motion support */
        @@media (prefers-reduced-motion: reduce) {
            .navbar-nav .nav-link,
            .dropdown-toggle,
            .dropdown-item,
            .page-loader,
            .navbar {
                transition: none;
            }

            .loader-spinner {
                animation: none;
            }

            html {
                scroll-behavior: auto;
            }
        }
    </style>
</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader" id="pageLoader">
        <div class="loader-spinner"></div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            @if (Session["Role"] != null && (Session["Role"].ToString() == "Admin"))
            {
                @Html.ActionLink("Westend Motors", "Admin", "Dashboard", new { area = "" }, new { @class = "navbar-brand" })
            }
            else
            {
                @Html.ActionLink("Westend Motors", "Index", "Dashboard", new { area = "" }, new { @class = "navbar-brand" })
            }

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" href="/Vehicles" id="vehiclesLink">
                            <i class="fas fa-car me-1"></i>Vehicles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Appointments" id="appointmentsLink">
                            <i class="fas fa-calendar-check me-1"></i>Appointments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/TradeInRequests" id="tradeInLink">
                            <i class="fas fa-exchange-alt me-1"></i>Trade-In
                        </a>
                    </li>
                </ul>

                <!-- User dropdown menu -->
                <ul class="navbar-nav ms-auto">
                    @if (Session["UserId"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="user-avatar">
                                    @(Session["FullName"]?.ToString().Substring(0, 1).ToUpper() ?? "U")
                                </div>
                                <span class="d-none d-sm-inline">@(Session["FullName"] ?? "User")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                @{
                                    var userId = Session["UserId"] as int?;
                                    if (userId.HasValue)
                                    {
                                        <li><a class="dropdown-item" href="/Users/Details/@userId">My Profile</a></li>
                                    }
                                    else
                                    {
                                        <li><a class="dropdown-item" href="/Users/Login">My Profile</a></li>
                                    }
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/Users/Logout">
                                        Sign Out
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()

        <footer>
            <div class="container">
                <p>&copy; @DateTime.Now.Year Westend Motors - Premium Automotive Solutions</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <!-- jQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap 5 JS Bundle -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            // Hide page loader
            setTimeout(function () {
                $('#pageLoader').addClass('hidden');
            }, 500);

            // Add active class to current page navigation
            const currentPath = window.location.pathname.toLowerCase();
            $('.navbar-nav .nav-link').removeClass('active');

            if (currentPath.includes('/vehicles')) {
                $('#vehiclesLink').addClass('active');
            } else if (currentPath.includes('/appointments')) {
                $('#appointmentsLink').addClass('active');
            } else if (currentPath.includes('/tradeinrequests')) {
                $('#tradeInLink').addClass('active');
            }

            // Navbar scroll effect
            $(window).scroll(function () {
                if ($(this).scrollTop() > 50) {
                    $('.navbar').addClass('scrolled');
                } else {
                    $('.navbar').removeClass('scrolled');
                }
            });

            // Dropdown functionality debugging
            console.log('Layout loaded - dropdown should be working');

            $('#userDropdown').on('click', function (e) {
                console.log('User dropdown clicked');
            });

            $('#userDropdown').on('show.bs.dropdown', function () {
                console.log('Dropdown is about to show');
            });

            $('#userDropdown').on('shown.bs.dropdown', function () {
                console.log('Dropdown is now visible');
            });

            // Enhanced mobile menu behavior
            $('.navbar-toggler').on('click', function () {
                const isExpanded = $(this).attr('aria-expanded') === 'true';
                $(this).attr('aria-expanded', !isExpanded);
            });

            // Close mobile menu when clicking outside
            $(document).on('click', function (e) {
                if (!$(e.target).closest('.navbar').length) {
                    $('.navbar-collapse').removeClass('show');
                    $('.navbar-toggler').attr('aria-expanded', 'false');
                }
            });

            // Smooth scroll for anchor links
            $('a[href^="#"]').on('click', function (e) {
                e.preventDefault();
                const target = $(this.hash);
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 80
                    }, 600);
                }
            });

            // Add loading state to buttons on form submission
            $('form').on('submit', function () {
                $(this).find('button[type="submit"], input[type="submit"]').addClass('btn-loading');
            });

            // AJAX form handling with loading states
            $(document).ajaxStart(function () {
                $('body').addClass('loading');
            }).ajaxStop(function () {
                $('body').removeClass('loading');
                $('.btn-loading').removeClass('btn-loading');
            });

            // Keyboard navigation improvements
            $('.dropdown-item').on('keydown', function (e) {
                const items = $('.dropdown-item');
                const currentIndex = items.index(this);

                switch (e.which) {
                    case 38: // Up arrow
                        e.preventDefault();
                        items.eq(currentIndex - 1).focus();
                        break;
                    case 40: // Down arrow
                        e.preventDefault();
                        items.eq(currentIndex + 1).focus();
                        break;
                    case 27: // Escape
                        $('#userDropdown').dropdown('hide');
                        $('#userDropdown').focus();
                        break;
                }
            });

            // Auto-hide alerts after 5 seconds with animation
            setTimeout(function () {
                $('.alert').addClass('fade-out');
                setTimeout(function () {
                    $('.alert.fade-out').remove();
                }, 300);
            }, 5000);

            // Page transition effects
            $('a[href]:not([href^="#"]):not([target="_blank"])').on('click', function (e) {
                const href = $(this).attr('href');
                if (href && !href.startsWith('javascript:') && !$(this).hasClass('no-transition')) {
                    e.preventDefault();
                    $('body').addClass('page-transitioning');
                    setTimeout(function () {
                        window.location.href = href;
                    }, 200);
                }
            });
        });

        // Handle browser back/forward navigation
        window.addEventListener('pageshow', function (event) {
            if (event.persisted) {
                $('#pageLoader').addClass('hidden');
                $('body').removeClass('page-transitioning loading');
                $('.btn-loading').removeClass('btn-loading');
            }
        });

        // Performance optimization: Preload critical pages
        const criticalPages = ['/Vehicles', '/Appointments', '/TradeInRequests'];
        criticalPages.forEach(function (page) {
            const link = document.createElement('link');
            link.rel = 'prefetch';
            link.href = page;
            document.head.appendChild(link);
        });
    </script>
</body>
</html>