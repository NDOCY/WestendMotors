@model WestendMotors.Models.TradeInRequest
@{
    var targetVehicle = ViewBag.TargetVehicle as WestendMotors.Models.Vehicle;
    var role = Session["Role"] as string;
    if (role == "Admin")
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout_User.cshtml";
    }
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="d-flex align-items-center">
            <div class="header-icon">
                <i class="fas fa-exchange-alt"></i>
            </div>
            <div>
                <h1 class="mb-1">Trade-In Request</h1>
                <p class="text-muted mb-0">Get the best value for your current vehicle toward your next purchase</p>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <!-- Left Side: Target Vehicle -->
        <div class="col-lg-6 mb-4">
            <div class="vehicle-showcase">
                <div class="showcase-header">
                    <h5><i class="fas fa-car me-2"></i>Your Selected Vehicle</h5>
                    <div class="price-tag">@targetVehicle.Price.ToString("C")</div>
                </div>

                <div class="showcase-body">
                    <h3 class="vehicle-title">@targetVehicle.Title</h3>

                    <!-- Vehicle Images -->
                    <div class="vehicle-images mb-3">
                        @if (targetVehicle.Images != null && targetVehicle.Images.Any())
                        {
                            <div class="main-showcase-image">
                                <img id="showcaseMainImage" src="@Url.Content(targetVehicle.Images.First().ImagePath)"
                                     class="showcase-image" alt="@targetVehicle.Title" />
                            </div>

                            if (targetVehicle.Images.Count() > 1)
                            {
                                <div class="showcase-thumbnails">
                                    @foreach (var img in targetVehicle.Images.Take(4))
                                    {
                                        <img src="@Url.Content(img.ImagePath)"
                                             class="showcase-thumbnail"
                                             onclick="changeShowcaseImage(this)" />
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <div class="no-image-placeholder">
                                <i class="fas fa-image"></i>
                                <p>No images available</p>
                            </div>
                        }
                    </div>

                    <!-- Vehicle Specs -->
                    <div class="specs-summary">
                        <div class="spec-row">
                            <div class="spec-item">
                                <i class="fas fa-calendar"></i>
                                <span class="spec-label">Year</span>
                                <span class="spec-value">@targetVehicle.Specs.Year</span>
                            </div>
                            <div class="spec-item">
                                <i class="fas fa-tachometer-alt"></i>
                                <span class="spec-label">Mileage</span>
                                <span class="spec-value">@targetVehicle.Specs.Mileage.ToString("N0") km</span>
                            </div>
                        </div>
                        <div class="spec-row">
                            <div class="spec-item">
                                <i class="fas fa-gas-pump"></i>
                                <span class="spec-label">Fuel</span>
                                <span class="spec-value">@targetVehicle.Specs.FuelType</span>
                            </div>
                            <div class="spec-item">
                                <i class="fas fa-cogs"></i>
                                <span class="spec-label">Transmission</span>
                                <span class="spec-value">@targetVehicle.Specs.Transmission</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side: Trade-In Form -->
        <div class="col-lg-6 mb-4">
            <div class="trade-form-card">
                <div class="form-header">
                    <h5><i class="fas fa-car-side me-2"></i>Your Vehicle Details</h5>
                    <p class="mb-0 text-muted">Tell us about the vehicle you'd like to trade in</p>
                </div>

                <div class="form-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                        </div>
                    }

                    @using (Html.BeginForm("Create", "TradeInRequests", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.TargetVehicleId)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label required">
                                        <i class="fas fa-industry me-2"></i>Make
                                    </label>
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-car"></i>
                                        </div>
                                        @Html.TextBoxFor(m => m.Make, new { @class = "form-control", placeholder = "e.g., Toyota, BMW, Ford" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Make, "", new { @class = "validation-message" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label required">
                                        <i class="fas fa-tag me-2"></i>Model
                                    </label>
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-car"></i>
                                        </div>
                                        @Html.TextBoxFor(m => m.Model, new { @class = "form-control", placeholder = "e.g., Camry, 3 Series, Focus" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Model, "", new { @class = "validation-message" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label required">
                                        <i class="fas fa-calendar-alt me-2"></i>Year
                                    </label>
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-calendar"></i>
                                        </div>
                                        @Html.TextBoxFor(m => m.Year, new { @class = "form-control", type = "number", min = "1990", max = DateTime.Now.Year.ToString(), placeholder = "e.g., 2018" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Year, "", new { @class = "validation-message" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label required">
                                        <i class="fas fa-tachometer-alt me-2"></i>Mileage (km)
                                    </label>
                                    <div class="input-group">
                                        <div class="input-icon">
                                            <i class="fas fa-road"></i>
                                        </div>
                                        @Html.TextBoxFor(m => m.Mileage, new { @class = "form-control", type = "number", min = "0", placeholder = "e.g., 120000" })
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Mileage, "", new { @class = "validation-message" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-money-bill-wave me-2"></i>Estimated Value (Optional)
                            </label>
                            <div class="input-group">
                                <div class="input-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                </div>
                                @Html.TextBoxFor(m => m.EstimatedValue, new { @class = "form-control", type = "number", min = "0", step = "1000", placeholder = "What do you think your car is worth?" })
                            </div>
                            @Html.ValidationMessageFor(m => m.EstimatedValue, "", new { @class = "validation-message" })
                            <small class="form-text">Our experts will provide a professional valuation</small>
                        </div>

                        <div class="form-group">
                            <label class="form-label">
                                <i class="fas fa-camera me-2"></i>Vehicle Images
                            </label>
                            <div class="file-upload-area">
                                <input type="file" name="customerImages" multiple class="file-input" id="imageUpload" accept="image/*" />
                                <label for="imageUpload" class="file-upload-label">
                                    <div class="upload-content">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                        <span class="upload-text">Click to upload images or drag and drop</span>
                                        <span class="upload-hint">PNG, JPG up to 5MB each (Max 10 images)</span>
                                    </div>
                                </label>
                                <div class="selected-files" id="selectedFiles"></div>
                            </div>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-paper-plane me-2"></i>Submit Trade-In Request
                            </button>
                            <a href="@Url.Action("Details", "Vehicles", new { id = targetVehicle.Id })" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Back to Vehicle
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Information Card -->
            <div class="info-card">
                <div class="info-header">
                    <i class="fas fa-info-circle"></i>
                    <h6>Trade-In Process</h6>
                </div>
                <div class="info-content">
                    <div class="info-item">
                        <div class="step-number">1</div>
                        <span>Submit your vehicle details and images</span>
                    </div>
                    <div class="info-item">
                        <div class="step-number">2</div>
                        <span>Our experts will evaluate your vehicle</span>
                    </div>
                    <div class="info-item">
                        <div class="step-number">3</div>
                        <span>Receive a competitive trade-in offer</span>
                    </div>
                    <div class="info-item">
                        <div class="step-number">4</div>
                        <span>Complete your purchase with trade-in credit</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Image showcase functionality
        function changeShowcaseImage(thumbnail) {
            document.getElementById('showcaseMainImage').src = thumbnail.src;

            // Update active thumbnail
            document.querySelectorAll('.showcase-thumbnail').forEach(thumb => {
                thumb.classList.remove('active');
            });
            thumbnail.classList.add('active');
        }

        // Set first thumbnail as active
        document.addEventListener('DOMContentLoaded', function() {
            const firstThumb = document.querySelector('.showcase-thumbnail');
            if (firstThumb) {
                firstThumb.classList.add('active');
            }
        });

        // File upload handling
        document.getElementById('imageUpload').addEventListener('change', function(e) {
            const files = e.target.files;
            const selectedFilesDiv = document.getElementById('selectedFiles');
            selectedFilesDiv.innerHTML = '';

            if (files.length > 0) {
                const fileList = document.createElement('div');
                fileList.className = 'file-list';

                Array.from(files).forEach((file, index) => {
                    if (index < 10) { // Limit to 10 files
                        const fileItem = document.createElement('div');
                        fileItem.className = 'file-item';
                        fileItem.innerHTML = `
                            <i class="fas fa-image"></i>
                            <span class="file-name">${file.name}</span>
                            <span class="file-size">${(file.size / 1024 / 1024).toFixed(1)} MB</span>
                        `;
                        fileList.appendChild(fileItem);
                    }
                });

                selectedFilesDiv.appendChild(fileList);

                if (files.length > 10) {
                    const warning = document.createElement('div');
                    warning.className = 'upload-warning';
                    warning.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Only the first 10 images will be uploaded.';
                    selectedFilesDiv.appendChild(warning);
                }
            }
        });

        // Drag and drop functionality
        const uploadArea = document.querySelector('.file-upload-area');

        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            uploadArea.addEventListener(eventName, preventDefaults, false);
            document.body.addEventListener(eventName, preventDefaults, false);
        });

        ['dragenter', 'dragover'].forEach(eventName => {
            uploadArea.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            uploadArea.addEventListener(eventName, unhighlight, false);
        });

        uploadArea.addEventListener('drop', handleDrop, false);

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        function highlight(e) {
            uploadArea.classList.add('dragover');
        }

        function unhighlight(e) {
            uploadArea.classList.remove('dragover');
        }

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;
            document.getElementById('imageUpload').files = files;

            // Trigger change event
            const event = new Event('change', { bubbles: true });
            document.getElementById('imageUpload').dispatchEvent(event);
        }
    </script>
}

